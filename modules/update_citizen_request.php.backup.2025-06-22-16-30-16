    <script>
        function filterUsers() {
            const deptSelect = document.getElementById('department_select');
            const userSelect = document.getElementById('user_select');
            const selectedDept = deptSelect.value;
            
            // ุฅุนุงุฏุฉ ุชุนููู ุงุฎุชูุงุฑ ุงููุณุชุฎุฏู
            userSelect.value = '';
            
            // ุฅุธูุงุฑ/ุฅุฎูุงุก ุงููุณุชุฎุฏููู ุญุณุจ ุงููุณู
            Array.from(userSelect.options).forEach(option => {
                if (option.value === '') {
                    option.style.display = 'block';
                } else {
                    const userDept = option.getAttribute('data-department');
                    option.style.display = (selectedDept === '' || userDept === selectedDept) ? 'block' : 'none';
                }
            });
        }
        
        function insertQuickResponse(text) {
            const textarea = document.querySelector('textarea[name="admin_notes"]');
            const currentText = textarea.value;
            textarea.value = currentText ? currentText + '\n\n' + text : text;
            textarea.focus();
        }
        
        function viewRequest(requestId) {
            window.open('view_citizen_request.php?id=' + requestId, '_blank', 'width=800,height=600');
        }
        
        // ุฅุฎูุงุก ุงูุฑุณุงุฆู ุจุนุฏ 5 ุซูุงู
        setTimeout(function() {
            const messages = document.querySelectorAll('.bg-green-100, .bg-red-100');
            messages.forEach(msg => msg.style.display = 'none');
        }, 5000);
        
        // ุชุญุฏูุซ ุงููุณุชุฎุฏููู ุนูุฏ ุชุญููู ุงูุตูุญุฉ
        document.addEventListener('DOMContentLoaded', function() {
            filterUsers();
        });
    </script>
