        $admin_notes = trim($_POST['admin_notes']);
        
        try {
            // ุชุญุฏูุซ ุงูุทูุจ
            $stmt = $db->prepare("UPDATE citizen_requests SET request_status = ?, assigned_to_department_id = ?, assigned_to_user_id = ?, admin_notes = ?, response_date = NOW() WHERE id = ?");
            $stmt->execute([$new_status, $assigned_department, $assigned_user, $admin_notes, $request_id]);
            
            // ุฅุฐุง ูุงู ุงูุทูุจ ููุชููุงูุ ุชุญุฏูุซ ุชุงุฑูุฎ ุงูุฅูุฌุงุฒ
            if ($new_status == 'ููุชูู') {
                $stmt = $db->prepare("UPDATE citizen_requests SET completion_date = NOW() WHERE id = ?");
                $stmt->execute([$request_id]);
